@inherits LayoutComponentBase
@using Blazored.Toast.Configuration
@using iita_par.Shared

<div class="page">
    <div class="nav-bar">
        <div class="topnav">
            <img src="assets/IITA-logo-1.png" alt="IITA logo" style="float: left;" />
            <img src="assets/PAR-logo.svg" alt="PAR Logo" class="par-logo" style="float: left; margin-right: 350px; gap:10px;" />
            <a class="active" href="/">Dashboard</a>
            <a href="#news">Delegate</a>
            <a href="#contact">Bug</a>
            <a href="#about">Help</a>
            <input type="text" placeholder="Switch to:" style="margin-left:180px;line-height:40px;" class="holder">
            @* <div class="user-info" style="display:inline;margin-left:100px;line-height:40px;vertical-align:middle;">
                <input type="text" placeholder="Switch to:">
            </div> *@
        </div>
    </div>

    <div id="container">
        <div id="mySidenav" class="sidenav">
            <NavMenu />
        </div>
        <div id="main" class="main">
            @Body
        </div>
    </div>
    <footer style="margin-top:20px" class="footer" data-title="Need help with something?" data-intro="Reach out to us. We're here to assist you.">
        <div class="flex-center footer-logos">
            <img src="assets/IITA-logo-1.png" alt="IITA logo" />
            <img src="assets/PAR-logo.svg" alt="PAR Logo" />
        </div>
        <div class="help-div">
            <h2>Need help with something?</h2>
            <p>
                Check out our <strong><a href="">FAQ Page</a></strong> for answers to common questions.
            </p>
            <p>
                Or contact <strong><a href="mailto:IITA-SDITSA@cgiar.org">IITA-SDITSA@cgiar.org</a></strong> for help.
            </p>
        </div>
    </footer>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="5"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                SuccessIcon="fa fa-thumbs-up"
                ErrorIcon="fa fa-bug"
                ShowProgressBar="true" />

                <LoadingOverlay /> 