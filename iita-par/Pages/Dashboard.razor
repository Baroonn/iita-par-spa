@page "/"
@inject NavigationManager Navigation
<style>
.info-section {
    background: rgba(255, 255, 255, 0.8); 
    backdrop-filter: blur(10px); 
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.4s ease, transform 0.3s ease;
    padding: 20px;
    margin-bottom: 30px;
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    
}

.info-section:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    transform: translateY(-8px);
}

.info-section h3 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 15px;
}

.info-section p,
.info-section a {
    color: #555;
    line-height: 1.6;
}

.action-item {
    background: rgba(255, 236, 210, 0.8); 
    backdrop-filter: blur(10px);
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.5s ease, transform 0.4s ease;
    padding: 25px;
    text-align: center;
    cursor: pointer;
    margin-bottom: 30px;
    position: relative;
    overflow: hidden;
}

.action-item:hover {
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
    transform: translateY(-8px) scale(1.02);
}

.action-item .icon {
    font-size: 2rem;
    margin-bottom: 15px;
    color: #333;
}

.action-item h3 {
    font-size: 1.6rem;
    margin-bottom: 10px;
    color: #333;
}

.action-item p {
    color: #666;
    line-height: 1.5;
}


.info-section::before,
.action-item::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2), transparent);
    transform: translate(-50%, -50%);
    transition: opacity 0.5s ease;
    z-index: 0;
}

.info-section:hover::before,
.action-item:hover::before {
    opacity: 1;
}
</style>


<div class="main-header">
    <div class="main-header-content">
        <div class="greeting">
            <h1>Good morning, Patrick</h1>
            <p><i class="fa-regular fa-bell"></i>   Your workplan is yet to <br /> be approved.</p>
        </div>
        <div class="time-info">
            <h2>11:40 AM</h2>
            <p>Tuesday, July 11</p>
        </div>
    </div>
    <div class="notice">
        Please take note: Database is refreshed every 24 hours. After updating your records in the other online systems, the changes will not immediately display in this application.
    </div>
</div>
<div class="actions">
    <h2>I would like to...</h2>
    <div class="action-items">
        <div class="action-item" @onclick=@(() => Navigation.NavigateTo("/workplan"))>
            <div class="icon"><i class="fa-solid fa-arrow-up-from-bracket"></i></div>
            <h3>Upload my Workplan</h3>
            <p>Submit my planned tasks and objectives for the appraisal period.</p>
        </div>
        <div class="action-item" @onclick=@(() => Navigation.NavigateTo("/my-appraisals"))>
            <div class="icon"><i class="fa-solid fa-file-pen"></i></div>
            <h3>Manage my Appraisals</h3>
            <p>Review and update my appraisal details and add comments.</p>
        </div>
        <div class="action-item" @onclick=@(() => Navigation.NavigateTo("/view-my-pdf"))>
            <div class="icon"><i class="fa-solid fa-file-pdf"></i></div>
            <h3>View/Download PDFs</h3>
            <p>Access and download PDF copies of your workplans and appraisals.</p>
        </div>
        <div class="action-item" @onclick=@(() => Navigation.NavigateTo("/achievements"))>
            <div class="icon"><i class="fa-solid fa-list-check"></i></div>
            <h3>Manage Achievements</h3>
            <p>Record and update your accomplishments to reflect completed workplans.</p>
        </div>
    </div>
</div>
<div class="contact">
    <p><img src="assets/megaphone.svg" alt="" /> Please contact <a href="mailto:IITA-HR@cgiar.org">IITA-HR@cgiar.org</a> if appraiser information is missing or incorrect.</p>
    <div class="info-sections">
        <div class="info-section">
            <h3>Your Account Info</h3>
            <div class="labels" style="display: inline-block;width: 50%;">
                <p><strong>Username:</strong></p>
                <p><strong>Registered e-mail address:</strong></p>
                <p><strong>Last name:</strong></p>
                <p><strong>First name:</strong></p>
                <p><strong>Staff ID:</strong></p>
            </div><div class="values" style="display: inline-block;width: 50%;">
                <p>ADEMOLA Patrick</p>
                <p>adepatrick@cgiar.org</p>
                <p>ADEMOLA</p>
                <p>Patrick</p>
                <p>E3ADEPAT</p>
            </div>
        </div>
        <div class="info-section">
            <h3>Supervising</h3>
            <p>You are viewing your own records.</p>
            <p><a href="#">Go to list of scientists you supervise</a></p>
            <p><a href="#">Go to list of irs you supervise</a></p>
            <p><a href="#">Go to list of p4d you supervise</a></p>
        </div>
        <div class="info-section">
            <h3>Your Appraiser</h3>
            <p>• David, Smith</p>
        </div>
    </div>
</div>

<div class="work-plan">
    <h2>NRS Workplans</h2>
    <p>Please enter your <a href="#">Workplan</a>.</p>
</div>

